<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_conner_16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:background="@drawable/bg_white_conner_topleft_topright_16dp"
        android:text="Cập nhật thông tin Người Dùng"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#55B1DC"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtmatv"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Ten:"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_gray_edittext_conner_16dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:hint="Ten nguoi dung"
            android:textColor="@color/black"
            android:id="@+id/edtsuatenthanhvien"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Nam Sinh:"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:hint="Nam Sinh"
            android:background="@drawable/bg_gray_edittext_conner_16dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:id="@+id/edtsuanamsinh"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:weightSum="10"
        android:padding="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:id="@+id/btnhuysuathanhvien"
            android:background="@drawable/bg_gray_conner_16dp"
            android:text="Huy"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:id="@+id/btnsuathanhvien"
            android:background="@drawable/bg_yellow_conner_16dp"
            android:text="Sua"/>
    </LinearLayout>






</LinearLayout>