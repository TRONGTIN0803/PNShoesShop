<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <TextView
                android:fontFamily="@font/poppins_medium"

                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại :"
                />
            <TextView
                android:fontFamily="@font/poppins_medium"

                android:id="@+id/txtSdtCho"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0120250003"/>
            <TextView
                android:layout_weight="10"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/txtTrangThaiCho"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="fdg"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:gravity="right"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <TextView
                android:fontFamily="@font/poppins_medium"

                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ :"
                />
            <TextView
                android:fontFamily="@font/poppins_medium"

                android:id="@+id/txtDiaChiCho"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="76  Loville Circle"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <TextView
                android:fontFamily="@font/poppins_medium"

                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá :"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/txtGiaTriCho"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="1.000.000"
                android:textColor="#40bFFF"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>



        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày :"
            />
        <TextView
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/txtNgayCho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-06-21T00:00:00"
            android:textSize="14dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHuy"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/radius_btn_huy_don"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Hủy đơn"/>
</LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>