<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/edt_login">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/ivHinh"
            android:src="@mipmap/image1"
            android:layout_gravity="center" />
        <TextView
            android:gravity="center"
            android:id="@+id/txtTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_baseline_star_24"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_baseline_star_24"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_baseline_star_24"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_baseline_star_24"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_baseline_star_border_24"/>


<!--            <TextView-->
<!--                android:id="@+id/txtdanhgia"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:textSize="14dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Đánh giá"-->
<!--                android:textColor="#40bfff"-->
<!--                android:textStyle="italic"-->

<!--                />-->
        </LinearLayout>

            <TextView
                android:id="@+id/txtGia"
                android:layout_width="wrap_content"
               android:text="1000000"
                android:layout_height="wrap_content"
                android:textColor="#40BFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"/>
            <TextView
                android:layout_marginRight="30dp"
                android:layout_gravity="end"
                android:id="@+id/txtGiacu"
                android:layout_width="wrap_content"
                android:text="11111111"
                android:layout_height="wrap_content"
                android:textColor="#E91E63"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDatHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_login"
                android:text="Đặt hàng"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnthemgiohang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_login"
                android:text="giỏ hàng"
                android:textColor="@color/white" />
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>