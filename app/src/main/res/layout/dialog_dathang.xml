<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_conner_16dp"
    android:orientation="vertical"
    android:layout_margin="16dp"

    >

    <TextView
        android:fontFamily="@font/poppins_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt Hàng"
        android:textSize="28dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/bg_blue_conner_topleft_topright_16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập SĐT"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="22dp"/>
    <EditText
        android:fontFamily="@font/poppins_medium"

        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_edittext_conner_16dp"
        android:padding="16dp"
        android:textSize="18dp"
        android:id="@+id/edtsdtdathang"/>
    <TextView
        android:fontFamily="@font/poppins_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Địa chỉ nhận hàng"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="22dp"/>
    <EditText
        android:fontFamily="@font/poppins_medium"

        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_edittext_conner_16dp"
        android:padding="15dp"
        android:textSize="16dp"
        android:id="@+id/edtdiachidathang"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/poppins_medium"

            android:layout_marginLeft="16dp"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Tổng giá: "
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:fontFamily="@font/poppins_medium"

            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:padding="26dp"
            android:textColor="@color/red"
            android:textSize="22dp"
            android:id="@+id/txtgiadathang"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btndathangthanhtoan"
        android:padding="14dp"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_yellow_conner_16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Đặt hàng" />

</LinearLayout>